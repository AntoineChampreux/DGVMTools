exportPattern("^[^\\.]")

import(methods)
import(maps,
       mapdata,
       maptools, 
       ggplot2, 
       ncdf4,
       rgdal, 
       sp,
       data.table)


importMethodsFrom("data.table")
importClassesFrom("ncdf4")

importClassesFrom("sp")
importMethodsFrom("sp")

importClassesFrom("raster")
importMethodsFrom("raster")

importFrom(raster, crop, extent)

exportClasses(TemporalExtent, 
              SpatialExtent, 
              Period, 
              PFT, 
              Source, 
              Field, 
              Quantity,  
              ComparisonLayer,
              BiomeScheme)

S3method(as.data.frame, ComparisonLayer)
S3method(as.data.frame, Field)

S3method(as.data.table, ComparisonLayer)
S3method(as.data.table, Field)

